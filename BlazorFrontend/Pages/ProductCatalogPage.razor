@page "/productsCatalog"
@inject IProductCatalog ProductCatalog
@inject NavigationManager NavigationManager

<h3>Список товаров</h3>

<table class="table">
    <thead>
        <tr>
            <th>Наименование товара</th>
            <th>Цена</th>
            <th>Id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in _products)
        {
            <tr>
                <td @onclick="()=> GoToPage(cat.Id)" style="cursor: pointer;">@cat.Name</td>
                <td>@cat.Price</td>
                <td>@cat.Id</td>
            </tr>
        }
    </tbody>
    <MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="()=>NavigateToAddPage()">Добавить товар</MudButton>
</table>


